{% extends 'base.html.twig' %}


{% block body %}
    <!-- Page -->
    <div
        class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Register</h2>
                        <span class="white-text">Welcome on board</span>
                        <ol class="breadcrumb">
                            <li>
                                <a href="#!">Home</a>
                            </li>
                            <li class="active">Register</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <!-- Page Content-->
        <section class="section-padding gray-bg log-section">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3 card card-panel">
                        <span style="color:red">
                            {% if error is defined %}
                                {{error}}
                            {% endif %}
                            {% if not form.vars.valid %}
                                <ul>
                                    {# Loop through every form item #}
                                    {% for child in form.children %}
                                        {# Display the errors of the form item #}
                                        {% for error in child.vars.errors %}
                                            <li>{{error.message}}</li>
                                        {% endfor %}
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </span>
                        <h3 class="text-extrabold">Create a new account</h3>
                        <form action="{{path ('security_registration')}}" id="register-form" role="form" method="post" accept-char="UTF-8" autocomplete="off" data-parsley-validate>
                            {{ form_row(form._token) }}
                            <div class="input-field">
                                <input data-parsley-error-message="A valid email address is required." data-parsley-trigger="change" id="email" name="registration[email]" required type="email" value="">
                                <label for="email">Email</label>
                                <span class="help-block">Type your email address.</span>
                            </div>
                           <div class="input-field">
                                <input data-parsley-error-message="A valid username address is required." data-parsley-trigger="change" id="username" name="registration[username]" required type="text" value="">
                                <label for="username">Username</label>
                                <span class="help-block">Type your username address.</span>
                            </div>
                            <div class="input-field">
                                <input data-parsley-error-message="The password must be at least 6 characters." data-parsley-minlength="6" data-parsley-trigger="change" id="password" name="registration[password]" required type="password" value="">
                                <label for="password">Password</label>
                                <i class="fa fa-eye show-password"></i>
                                <span class="help-block">Type your password.</span>
                            </div>
                            <div class="input-field">
                                <input data-parsley-equalto="#password" data-parsley-error-message="Password does not match." data-parsley-trigger="change" id="password_confirmation" name="registration[confirm_password]" required type="password" value="">
                                <label for="password_confirmation">Confirm Password</label>
                                <i class="fa fa-eye show-password"></i>
                                <span class="help-block">Confirm your password.</span>
                            </div>
                            <div class="checkbox">
                                <input id="accept-terms" name="accept-terms" required type="checkbox" value="1"/>
                                <label for="accept-terms">I have read and I accept the
                                    <a href="#!" target="_blank">Terms Of Use</a>
                                </label>
                            </div>

                            <button class="btn btn-lg gradient secondary btn-block waves-effect waves-light mt-20 mb-20" type="submit">Create an account</button>
                            <div class="links">
                                <a href="/login.html">Already have an account? Click here</a>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </section>

    </div>

</div>
{% endblock %}
