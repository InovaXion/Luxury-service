{% extends 'base.html.twig' %}

{% block title %}Candidates{% endblock %}

{% block body %}
    <h1>Candidates</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidate.id }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ candidate.gender }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ candidate.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ candidate.lastname }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ candidate.adress }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ candidate.country }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ candidate.nationality }}</td>
            </tr>
            <tr>
                <th>Passport</th>
                <td>{{ candidate.passport }}</td>
            </tr>
            <tr>
                <th>Curriculumvitae</th>
                <td>{{ candidate.curriculumvitae }}</td>
            </tr>
            <tr>
                <th>Profilpicture</th>
                <td>{{ candidate.profilpicture }}</td>
            </tr>
            <tr>
                <th>Currentlocation</th>
                <td>{{ candidate.currentlocation }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{{ candidate.dateofbirth ? candidate.dateofbirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Placeofbirth</th>
                <td>{{ candidate.placeofbirth ? candidate.placeofbirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Emailadress</th>
                <td>{{ candidate.emailadress }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ candidate.password }}</td>
            </tr>
            <tr>
                <th>Avaible</th>
