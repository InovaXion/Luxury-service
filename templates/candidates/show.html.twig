            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ candidate.experience }}</td>
            </tr>
            <tr>
                <th>Shortdescription</th>
                <td>{{ candidate.shortdescription }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ candidate.notes }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{{ candidate.datecreated ? candidate.datecreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dateupdated</th>
                <td>{{ candidate.dateupdated ? candidate.dateupdated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datedeleted</th>
                <td>{{ candidate.datedeleted ? candidate.datedeleted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Files</th>
                <td>{{ candidate.files }}</td>
            </tr>
            <tr>
                <th>Isadmin</th>
                <td>{{ candidate.isadmin ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('candidates_index') }}">back to list</a>

    <a href="{{ path('candidates_edit', {'id': candidate.id}) }}">edit</a>

